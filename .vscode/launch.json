  "version": "0.2.0",
  "configurations": [
    {
      "name": "server - jest",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/server/node_modules/.bin/jest",
        "--runInBand",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "server - run",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "preLaunchTask": "npm: compile",
      "program": "${workspaceFolder}/server/lib/src/server.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
