{
  "compilerOptions": {
    "outDir": "./lib/",
    "inlineSourceMap": true,
    "target": "es2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./test/**/*.ts", "./src/**/*.ts"]
}
